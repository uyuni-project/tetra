#!/usr/bin/env ruby
# frozen_string_literal: true

# tetra is a tool to help you build RPM packages for Java projects.
#
# Copyright 2015 Silvio Moioli <moio@suse.de>

# Add lib/ to load path if running from a git clone (dev mode)
if File.exist?(File.join(__dir__, "..", ".git"))
  $LOAD_PATH.unshift(File.join(__dir__, "..", "lib"))
end

begin
  require "tetra"
rescue LoadError
  require "rubygems"
  require "tetra"
end

Tetra::MainCommand.run
